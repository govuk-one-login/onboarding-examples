{
  "extends": "./node_modules/@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "../nodejs-singleclient/dist",
    "sourceMap": true,
    "lib": ["dom"],
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "Node16",
    "skipLibCheck": true
  },
  "include": [
    "../nodejs-singleclient/services", 
    "../nodejs-singleclient/public", "../nodejs-singleclient/src/index.ts", "../nodejs-singleclient/src/utils", "../nodejs-singleclient/src/types"],
  "exclude": ["../nodejs-singleclient/node_modules"],
  "ts-node": {
    "files": true
  }
}
