{
  "name": "node-js-typescript-express-sample",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "npx pkgroll",
    "dev:int": "cp .env.integration .env && tsx watch --clear-screen=false src/server.ts",
    "dev:sim": "cp .env.simulator .env && tsx watch --clear-screen=false src/server.ts",
    "simulator:shell": "curl -s localhost:3000 > /dev/null && docker exec -ti $(docker ps -q -f name=simulator) bash",
    "simulator:start": "curl -s localhost:3000 > /dev/null || docker run --rm -d -p 3000:3000 --name simulator ghcr.io/govuk-one-login/simulator:latest",
    "simulator:status": "curl -s localhost:3000 > /dev/null && docker ps -f name=simulator",
    "simulator:stop": "curl -s localhost:3000 > /dev/null && docker kill $(docker ps -q -f name=simulator)"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^22.0.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.7",
    "@types/node": "^22.9.0",
    "@types/nunjucks": "^3.2.4",
    "dotenv": "^16.4.5",
    "pkgroll": "^2.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "did-resolver": "^4.1.0",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "govuk-frontend": "^4.9.0",
    "jose": "^5.9.3",
    "nunjucks": "^3.2.4",
    "openid-client": "^6.1.3",
    "pino": "^9.4.0",
    "sass": "^1.81.0",
    "web-did-resolver": "^2.0.27"
  }
}
