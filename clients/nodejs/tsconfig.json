{
  "extends": "./node_modules/@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["dom"],
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "Node16",
    "skipLibCheck": true
  },
  "include": [
    "services", 
    "public", "src/index.ts", "src/utils", "src/types"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}
