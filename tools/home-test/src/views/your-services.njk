{% extends "template.njk" %}

{% block content %}
  <div class="govuk-grid-row" id="your-services">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl your-services__heading">Your services</h1>
      <div class="your-services__signed-in-status">
        <p class="govuk-body">You're signed in as
          <strong>person@example.com</strong>
        </p>
      </div>
      
    <h2 class="govuk-heading-m">Your accounts</h2>

      <ul class="govuk-list your-services__list ">
        <li class="your-services__card">
            <h3 class="govuk-heading-s your-services__card__heading">{{ rpAccountServiceName }}</h3>
            <div class="your-services__card__content">
              <p class="govuk-body">{{ rpAccountServiceDescription }}</p>
              <p class="govuk-body">
                <a class="govuk-link" href="{{ rpAccountServiceLink }}">{{ rpAccountServiceLinkText }}</a>
              </p>
              <p class="govuk-body govuk-body your-services__card__last-used">Last used: 6 March 2025</p>
            </div>
        </li>
      </ul>
    <h2 class="govuk-heading-m">Other services you've used</h2>
      <ul class="govuk-list your-services__list">
        <li class="your-services__card">
            <div class="your-services__card__content">
              <h3 class="govuk-heading-s govuk-!-font-weight-regular">
                <a class="govuk-link" href="{{ rpServiceLink' }}">{{ rpServiceLinkText }}</a>
              </h3>
              <p class="govuk-body your-services__card__last-used">Last used: 6 September 2024</p>
            </div>
          </li>
      </ul>
    </div>
  </div>
{% endblock %}